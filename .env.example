# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com

# Email Configuration (Resend - Alternative)
RESEND_API_KEY=your-resend-api-key

# OpenAI Configuration (for document analysis)
OPENAI_API_KEY=your-openai-api-key

# Anthropic Configuration (EcoNova AI - Recommended)
# If set, /api/ask will use Claude instead of OpenAI
ANTHROPIC_API_KEY=your-anthropic-api-key

# Environment
NODE_ENV=production
PORT=3000

# Security
SESSION_SECRET=your-session-secret-key

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=kpis-orsega-files
R2_PUBLIC_URL=https://your-bucket.your-account-id.r2.dev

# Company Configuration
COMPANY_NAME=Grupo Orsega
COMPANY_EMAIL=admin@grupoorsega.com

# N8N Integration
N8N_WEBHOOK_TOKEN=your-n8n-webhook-token
N8N_EXCHANGE_RATE_WEBHOOK_URL=https://your-n8n-instance.com/webhook/exchange-rate
